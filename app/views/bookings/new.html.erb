<h1>Bookings</h1>
<%= form_with model: @booking, local: true do |f| %>
  <% i = 1 %>
  <%= f.fields_for :passengers do |passengers_data| %>
    <%= "Passenger #{i}" %>
    <%= passengers_data.text_field :name, placeholder: "Passenger's name", required: true %>
    <%= passengers_data.email_field :email, placeholder: "name@example.com", required: true %>
    <% i += 1%>
  <% end %>

  <%= f.hidden_field :flight_id, value: params[:booking][:id] %>
  <%= f.submit "Purchase ticket" %>
<% end %>

<div class="flight_information">
  <p>
    <strong>Departing:</strong>
    <%= @flight.outbound_airport.city %>
  </p>

  <p>
    <strong>Departure time:</strong>
    <%= @flight.departure_time.strftime('%H:%M') %>
  </p>

  <p>
    <strong>Departure date:</strong>
    <%= @flight.departure_date %>
  </p>

  <p>
    <strong>Flying To:</strong>
    <%= @flight.inbound_airport.city %>
  </p>

  <p>
    <strong>Arrival time:</strong>
    <%= @flight.arrival_time.strftime('%H:%M') %>
  </p>

  <p>
    <strong>Arrival date:</strong>
    <%= @flight.arrival_date %>
  </p>

  <p>
    <strong>Flight capacity:</strong>
    <%= @flight.flight_capacity %>
  </p>
</div>

